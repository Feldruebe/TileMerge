<mah:MetroWindow x:Class="TileMerger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TileMerger"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding Main, Source={StaticResource Locator}}">
  <Grid>
    <StackPanel>
      <Grid>
        <Button Content="{iconPacks:FontAwesome Kind=PooSolid, Spin=True, Width=64, Height=64}" Style="{StaticResource MetroCircleButtonStyle}" Click="Button_Click" />
      </Grid>
    </StackPanel>
  </Grid>
</mah:MetroWindow>

